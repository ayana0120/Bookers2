<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-9">
      <table class="table book-index">
        <h2>Books</h2>
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
                  </td>
                <% end %>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

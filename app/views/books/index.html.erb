<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
      <% if flash[:complete] %>
        <div class="flash">
          <%= flash[:complete] %>
        </div>
      <% end %>
    <%= form_for(@book) do |f| %>
      <% if @book.errors.any? %>
      <div class="error">
          <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
      <% end %>
      <div class="col-md-3">
        <h2>New book</h2>
          <div class="form-title ">Title</div>
            <%= f.text_field :title %>
          <div class="form-body">Body</div>
            <%= f.text_area :body %><br>
          <button type="submit" class="btn btn-primary btn-block">Create Book</button>
      </div>
    <% end %>
    <div class="col-md-9">
      <table class="table book-index">
        <h2>Books</h2>
      	  <thead>
      	    <th>Title</th>
            <th>Opinion</th>
      	  </thead>
      	  <tbody>
      	  <% @books.each do |book| %>
      	    <tr>
      	      <th><%= book.title %></th>
      	      <th><%= book.body %></th>
      	    </tr>
      	  <% end %>
      	</tbody>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-9">
      <h1>Book detail</h1>
        <table class="table table-user-show">
          <tr>
    	      <td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg"%></td>
    	      <th><%= link_to user.name, user_path(user) %></th>
            <th><%= link_to book.title, book_path(user) %></th>
            <th><%= book.body %></span></th>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(book), class:"btn btn-success"%></td>
              <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger" %></td>
            <% end %>
          </tr>
      	</table>
    </div>
  </div>
</div>
<h1>User info</h1>
  <%= form_for(@user, url:"/user/#{@user.id}") do |f| %>
    <% if @user.errors.any? %>
      <div class="error">
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <label class="control-label sr-only" for="inputEmail">Name</label>
      <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
    <div class="user-edit-image">
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <div class="form-body">Introduction</div>
      <%= f.text_area :introduction %><br>
    <div class="upload">
      <%= f.submit " Update User", class:"btn btn-lg btn-block" %>
    <div class="form-name"><b>Name</b></div>
      <%= f.text_field :name %>
    <div class="profile-image"><b>Image</b></div>
      <%= f.attachment_field :profile_image %>
    <div class="form-body"><b>Introduction</b></div>
      <%= f.text_area :introduction %><br>
    <div class="upload">
      <%= f.submit " Update User" %>
    </div>
  <% end %>
</main>
<div class="row">
  <div class="col-md-3">
    <table class="table table-user">
      <h2>User info</h2>
      <thead>
        <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>Name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>Introduction</th>
          <th><%= @user.introduction %></th>
      </tr>
      <tr>
      <% if user.id == current_user.id %>
        <th colspan="2"><button type="button" class="btn btn-block">
          <%= link_to edit_user_path(@user) do %>
          <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
          <% end %>
        </button>
        </th>
      <% end %>
      </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="book-show">
  <p id="notice"><%= notice %></p>
    <% if flash[:complete] %>
    <div class="flash">
    <%= flash[:complete] %>
    </div>
  <% end %>
    <%= form_for(@book) do |f| %>
      <% if @book.errors.any? %>
      <div class="error">
        <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
    <div class="row">
      <div class="col-md-3">
          <h2>New book</h2>
            <div class="form-title">Title</div>
              <%= f.text_field :title %>
            <div class="form-body">Opinion</div>
              <%= f.text_area :opinion %><br>
            <div colspan="2"><button type="button" class="btn btn-block">
              <%= f.submit " Create Book" %>
          </div>
      </div>
      </div>
    <% end %>
</div>
  <div class="row">
    <div class="col-md-9">
  	  <table class="user-index">
  	  	<thead>
  	  	  <h2>Users</h2>
  	  	</thead>
  	  	<tbody>
  	  	  <%= @users.each do |user| %>
	  	  	<tr>
	  	  	  <th><%= attachment_image_tag user, :profile_image %></th>
	  	  	  <th><%= user.user.namge %></th>
	  	  	  <th><%= link_to "Show", user_path(user.id) %></th>
	  	  	</tr>
  	  	  <% end %>
  	  	</tbody>
  	  </table>
  	</div>
  </div>
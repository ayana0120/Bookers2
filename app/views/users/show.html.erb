<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-9">
      <h1>Book detail</h1>
        <table class="table table-user-show">
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
                <% end %></td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= @book.body %></td>
                    <td><%= link_to "Edit", edit_book_path(book.id), class:"btn btn-success"%></td>
                    <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
              </tr>
            <% end %>
            </td>
          </tr>
        </table>
    </div>
  </div>
</div>